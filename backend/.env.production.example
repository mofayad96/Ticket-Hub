# Production Environment Variables Example
# Copy this file to .env.production and update with your values
# DO NOT commit .env.production to git!

# JWT Secret - Use a strong random string
# Generate with: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_here_change_me

# MongoDB Connection
# Update with your MongoDB credentials
MONGO_URI=mongodb://root:your_password@mongo:27017/?authSource=admin

# Client URL - Your EC2 public IP or domain
# Update after deploying to EC2
CLIENT_URL=http://YOUR_EC2_IP:3000

# Server Port
PORT=4000
